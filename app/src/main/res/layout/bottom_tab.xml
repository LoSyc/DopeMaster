<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:background="@drawable/tab_bg"
    android:orientation="horizontal">

    <com.daoguang.dopemaster.ui.view.BottomTabView
        android:id="@+id/home_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        custom:tab_icon="@drawable/home"
        custom:text="@string/tab_home"
        custom:text_size="14sp"
        custom:color="#5F97FA"/>

    <com.daoguang.dopemaster.ui.view.BottomTabView
        android:id="@+id/order_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        custom:tab_icon="@drawable/order"
        custom:text="@string/tab_order"
        custom:text_size="14sp"
        custom:color="#5F97FA"/>

    <com.daoguang.dopemaster.ui.view.BottomTabView
        android:id="@+id/show_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        custom:tab_icon="@drawable/show"
        custom:text="@string/tab_show"
        custom:text_size="14sp"
        custom:color="#5F97FA"/>

    <com.daoguang.dopemaster.ui.view.BottomTabView
        android:id="@+id/my_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        custom:tab_icon="@drawable/my"
        custom:text="@string/tab_my"
        custom:text_size="14sp"
        custom:color="#5F97FA"/>
</LinearLayout>
