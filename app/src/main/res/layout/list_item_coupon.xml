<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >


    <TextView
            android:id="@+id/my_coupon_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/orangered"
            android:padding="6dp"
            android:text="使用状态" />

    <TextView
            android:id="@+id/my_coupon_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_coupon_state"
            android:layout_alignParentRight="true"
            android:paddingTop="14dp"
            android:textSize="12sp"
            android:padding="4dp"
            android:text="使用期限\n2015/3/17" />

    <TextView
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/my_coupon_state"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:padding="2dp"
            android:text="装修团队名字" />

    <TextView
            android:id="@+id/my_coupon_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_name"
            android:layout_toLeftOf="@id/my_coupon_state"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:padding="3dp"
            android:text="优惠价格" />


    <TextView
            android:id="@+id/my_coupon_demand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_coupon_rate"
            android:layout_toLeftOf="@id/my_coupon_state"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:padding="2dp"
            android:textSize="12sp"
            android:text="使用条件" />


</RelativeLayout>