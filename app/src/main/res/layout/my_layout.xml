<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#EEEEEE">

    <com.daoguang.dopemaster.ui.view.TopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            custom:titleText="@string/my_topText"
            custom:titleTextSize="15sp"
            custom:titleTextColor="#FFFFFF"
            custom:leftMargin="15dp"
            custom:topMargin="2dp" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" >

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#FFFFFF" >

            <RelativeLayout
                    android:id="@+id/head_re_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/background_activated"
                    android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/head_image_view"
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/head_image" />

                <TextView
                        android:id="@+id/head_tv_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/head_image_view"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="30dp"
                        android:text="jacky"
                        android:textSize="16sp"
                        android:textColor="#525252" />

                <TextView
                        android:id="@+id/head_tv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/head_tv_first"
                        android:layout_toRightOf="@id/head_image_view"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="10dp"
                        android:text="号码：1354657323"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                <ImageView
                        android:layout_height="30dp"
                        android:layout_width="10dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/move_image" />
            </RelativeLayout>
        </TableRow>

        <LinearLayout>

            <TextView
                    android:layout_height="10dp"
                    android:layout_width="match_parent" />

        </LinearLayout>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent" >

            <RelativeLayout
                    android:id="@+id/my_coupon"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_activated" >

                <ImageView
                        android:id="@+id/discount_image_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="17dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/discount_image" />

                <TextView
                        android:id="@+id/dis_tv_first"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/discount_image_view"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="32dp"
                        android:text="我的优惠卷"
                        android:textColor="#525252"
                        android:textSize="15sp" />

                <TextView
                        android:id="@+id/dis_tv_second"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/dis_tv_first"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="32dp"
                        android:text="4"
                        android:textColor="#FF0E0E"
                        android:textSize="15sp" />

                <ImageView
                        android:layout_height="30dp"
                        android:layout_width="10dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/move_image" />
            </RelativeLayout>
        </TableRow>

        <TextView
                android:layout_height="1dp"
                android:layout_width="match_parent" />

        <TableRow>

            <RelativeLayout
                    android:id="@+id/collect_re_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_activated" >

                <ImageView
                        android:id="@+id/collect_image_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/collect_image">
                </ImageView>

                <TextView
                        android:id="@+id/cell_tv_first"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/collect_image_view"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="32dp"
                        android:text="我的收藏"
                        android:textSize="15sp"
                        android:textColor="#525252" />

                <TextView
                        android:id="@+id/cell_tv_second"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/cell_tv_first"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="38dp"
                        android:text="12"
                        android:textSize="15sp"
                        android:textColor="#FF0E0E" />

                <ImageView
                        android:layout_height="30dp"
                        android:layout_width="10dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/move_image" />
            </RelativeLayout>
        </TableRow>

        <TextView
                android:layout_height="10dp"
                android:layout_width="match_parent" />

        <TableRow
                android:id="@+id/my_addr"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#FFFFFF" >

            <RelativeLayout
                    android:id="@+id/addre_re_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/background_activated"
                    android:layout_weight="1">

                <ImageView
                        android:id="@+id/addre_image_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="17dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/addr_image" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/addre_image_view"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="32dp"
                        android:text="我的地址"
                        android:textSize="15sp"
                        android:textColor="#525252" />

                <ImageView
                        android:layout_height="30dp"
                        android:layout_width="10dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/move_image" />
            </RelativeLayout>

        </TableRow>
    </TableLayout>
</LinearLayout>
