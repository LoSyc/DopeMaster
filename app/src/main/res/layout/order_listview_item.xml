<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="负责团队：名字"
            android:textColor="#525252"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/order_return" />

        <TextView
            android:id="@+id/order_item_team_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:text="订单已完成"
            android:textColor="#ff8484"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#f1f1f1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_item_team_portrait"
            android:src="@mipmap/order_test"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_item_team_address"
                android:text="装修地址：广州市天河区华南理工大学"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_item_team_time"
                android:textColor="#999999"
                android:text="下单时间：2015-2-12"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="13sp"
            android:background="@drawable/order_raduis"
            android:id="@+id/order_item_team_comments"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="评论" />

        <Button
            android:textSize="13sp"
            android:textColor="#000000"
            android:background="@drawable/order_raduis"
            android:id="@+id/order_item_team_confirm"
            android:layout_width="wrap_content"
            android:text="确认完成"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp" />

        <Button
            android:textSize="13sp"
            android:textColor="#000000"
            android:background="@drawable/order_raduis"
            android:text="删除订单"
            android:id="@+id/order_item_team_delete"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp" />

    </LinearLayout>

</LinearLayout>
